<p id="notice"><%= notice %></p>
<h1>Listing Quotes</h1>
<table>
  <thead>
    <tr>
      <th>Quote</th>
      <th>Author</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <tr><br>
        <% @posts.each do |post| %>
        <td><%= post.quote %></td>
        <td><%= post.author %></td>
        <td><%= post.tag %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
<%= link_to 'Back', posts_path %>
