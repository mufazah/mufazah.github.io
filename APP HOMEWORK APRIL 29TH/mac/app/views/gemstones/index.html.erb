<p id="notice"><%= notice %></p>

<h1>Listing Gemstones</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Properties</th>
      <th>Picture</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gemstones.each do |gemstone| %>
      <tr>
        <td><%= gemstone.name %></td>
        <td><%= gemstone.properties %></td>
        <td><%= gemstone.picture %></td>
        <td><%= gemstone.tag %></td>
        <td><%= link_to 'Edit', edit_gemstone_path(gemstone) %></td>
        <td><%= link_to 'Destroy', gemstone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Gemstone', new_gemstone_path %>
